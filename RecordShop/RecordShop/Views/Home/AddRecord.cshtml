
@{
    ViewData["Title"] = "AddRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Your Record</h2>

<form ng-submit="submitForm()" class="form-horizontal" role="form">
    <div class="form-row">
        <div class="form-group">
            <label for="albumName">Album Name</label>
            <input type="text" class="form-control" id="albumName" ng-model="album.name" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="artist">Artist</label>
            <input type="text" class="form-control" id="artist" ng-model="album.artist"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="genre">Genre</label>
            <input type="text" class="form-control" id="genre" ng-model="album.genre"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" ng-model="album.price"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label for="picture">Image</label>
            <input type="file" class="form-control" id="picture" ng-model="album.picture" />
        </div>
    </div>
    <button type="submit" class="btn-lg btn-red darken-3">Add Record</button>
</form>

