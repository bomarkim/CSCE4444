
@{
    ViewData["Title"] = "RecordList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="record" ng-controller="RecordListCtrl">
    <h2>RecordList</h2>
    <input type="text" class="form-control" id="name" placeholder="Album Name" ng-model="name"/>
    <ul>
        <li ng-repeat="r in listOfAlbums | filter: {name : name}">
            <h4>{{r.name}}</h4>
            <a href="album">{{r.img}}</a>
        </li>
    </ul>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb red darken-3">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Record List</li>
        </ol>
    </nav>
</div>