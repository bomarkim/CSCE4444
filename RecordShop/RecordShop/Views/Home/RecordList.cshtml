
@{
    ViewData["Title"] = "RecordList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="record" ng-controller="RecordListCtrl" ng-cloak>
    <h2>RecordList</h2>
    <input type="text" class="form-control" id="name" placeholder="Album Name" ng-model="name"/>
    <ul>
        <li ng-repeat="r in listOfRecords | filter: {name : name}">
            <div class="row">
                <a href="album/{{r.recordId}}">
                    <div class="col-md-6">
                        <h4 style="color: white">{{r.name}}</h4>
                        <img src="{{r.imageUrl}}" height="100" width="100" />
                    </div>
                    <div class="col-md-6">
                        <h3 style="color: white">Price: {{r.price}}</h3>
                    </div>

                </a>
            </div>
        </li>
    </ul>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb red darken-3">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Record List</li>
        </ol>
    </nav>
</div>