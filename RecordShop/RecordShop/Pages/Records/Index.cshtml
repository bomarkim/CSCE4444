@page
@model RecordShop.Records.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].ImageThumbnailUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].isPreferredGenre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Record) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageThumbnailUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPreferredGenre)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RecordId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RecordId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RecordId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
